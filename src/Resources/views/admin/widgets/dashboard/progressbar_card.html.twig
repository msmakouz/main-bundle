<div class="col-sm-6 col-lg-3">
    <div class="card {{ widget.backgroundGradient }} card-widget" style="color: {{ widget.color }};">
        <div class="card-body">
            <div class="text-value-lg">{{ widget.value }}</div>
            <div>{{ widget.text | trans }}</div>
            <div class="progress progress-xs my-2">
                <div class="progress-bar {{ widget.progressbarBackgroundGradient }}" role="progressbar"
                     style="width: {{ widget.progressbarPercent }}%; {% if not widget.progressbarBackgroundGradient %}background-color: #fff;{% endif %}"
                     aria-valuenow="{{ widget.progressbarPercent }}" aria-valuemin="0" aria-valuemax="100">
                </div>
            </div>
            <small style="color: {{ widget.helpTextColor }};">{{ widget.helpText | trans }}</small>
        </div>
    </div>
</div>