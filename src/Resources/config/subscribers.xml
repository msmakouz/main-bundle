<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="gedmo.listener.tree" class="Gedmo\Tree\TreeListener">
            <tag name="doctrine.event_subscriber" connection="default"/>
            <call method="setAnnotationReader">
                <argument type="service" id="annotation_reader"/>
            </call>
        </service>
        <service id="gedmo.listener.sluggable" class="Gedmo\Sluggable\SluggableListener">
            <tag name="doctrine.event_subscriber" connection="default"/>
            <call method="setAnnotationReader">
                <argument type="service" id="annotation_reader"/>
            </call>
        </service>
        <service id="Zentlix\MainBundle\EventSubscriber\SidebarSubscriber">
            <argument type="service" id="Zentlix\MainBundle\Domain\Site\Repository\SiteRepository"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Zentlix\MainBundle\EventSubscriber\BundleSubscriber">
            <argument type="service" id="zentlix_main.command_bus"/>
            <argument type="service" id="translator"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="Zentlix\MainBundle\Domain\Locale\Repository\LocaleRepository"/>
            <argument type="string">%kernel.default_locale%</argument>
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Zentlix\MainBundle\EventSubscriber\PaginatorSubscriber">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>