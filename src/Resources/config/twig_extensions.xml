<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="zentlix_main.twig_extension.admin_panel" class="Zentlix\MainBundle\UI\Http\Web\Widget\AdminPanel">
            <argument type="service" id="security.helper"/>
            <argument type="service" id="zentlix_main.visual_editor"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_main.twig_extension.asset" class="Zentlix\MainBundle\UI\Http\Web\Widget\Asset">
            <argument type="service" id="zentlix_main.sites"/>
            <tag name="twig.extension"/>
        </service>

        <service id="zentlix_main.twig_extension.sidebar" class="Zentlix\MainBundle\UI\Http\Web\Widget\Admin\Sidebar">
            <argument type="service" id="zentlix_main.sidebar"/>
            <argument type="service" id="event_dispatcher"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_main.twig_extension.dashboard_widgets" class="Zentlix\MainBundle\UI\Http\Web\Widget\Admin\DashboardWidgets">
            <argument type="service" id="zentlix_user.admin_settings"/>
            <argument type="service" id="zentlix_main.widgets"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_main.twig_extension.dropzone_settings" class="Zentlix\MainBundle\UI\Http\Web\Widget\Admin\DropzoneSettings">
            <argument type="service" id="translator"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_main.twig_extension.admin.bundles" class="Zentlix\MainBundle\UI\Http\Web\Widget\Admin\Bundles">
            <argument type="service" id="zentlix_main.bundles"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>