{% extends '@MainBundle/admin/layouts/base.html.twig' %}

{% block title %}{{ 'zentlix_main.locale.locales' | trans }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('admin.index') }}">{{ 'zentlix_main.control_panel' | trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'zentlix_main.locale.locales' | trans }}</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="card w-100">
            <div class="card-header">{{ 'zentlix_main.locale.locales' | trans }}</div>
            <div class="card-body">
                <div class="alert alert-info">{{ 'zentlix_main.locale.info' | trans }}</div>
                <div id="locales-datatable">{{ 'zentlix_main.loading_dots' | trans }}</div>
                <script>
                    $(document).ready(function () {
                        $('#locales-datatable').initDataTables({{ datatable_settings(datatable) }});
                    });
                </script>
            </div>
        </div>
    </div>
{% endblock %}