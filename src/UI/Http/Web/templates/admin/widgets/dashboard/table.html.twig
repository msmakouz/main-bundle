<div class="col-sm-12 col-md-12">
    <table class="table table-responsive-sm table-outline mb-0">
        <thead class="thead-light">
        <tr>
            {% for thead in widget.headers %}
                <th class="text-center">
                    {{ thead | trans }}
                </th>
            {% endfor %}
        </tr>
        </thead>
        <tbody style="background-color: #fff">
            {% for tr in widget.rows %}
                <tr>
                    {% for td in tr %}
                        <td class="text-center">
                            {% autoescape %}
                                {{ td | raw }}
                            {% endautoescape %}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            {% if widget.rows is empty %}
                <tr>
                    <td class="text-center" colspan="{{ widget.headers | length }}">
                        {{ 'zentlix_main.empty_data' | trans }}
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
